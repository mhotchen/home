{
  "diagnostic.enableMessage": "never",
  "suggest.autoTrigger": "none",
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["hs", "haskell", "lhaskell"]
    }
  }
}
